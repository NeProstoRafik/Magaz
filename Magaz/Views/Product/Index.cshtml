@model IEnumerable<Product>;

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список продуктов</h2>
        </div>
        <div class="col-6 text-right">
            <a  asp-action="Upsert" class="btn btn-primary">Создать новый продукт</a>

        </div>
    </div>
</div>

<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    название продукта
                </th>
                <th>
                    цена
                </th>
                <th>
                    категория
                </th>
                <th>
                    приложение
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="30%">@obj.Name</td>
                    <td width="10%">@obj.Price</td>
                    <td width="20%">@obj.Category.Name</td>
                    <td width="20%">@obj.ApplicationType.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">Изменить</a>
                            <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">Удалить</a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>
        продуктов не существует
    </p>
}

